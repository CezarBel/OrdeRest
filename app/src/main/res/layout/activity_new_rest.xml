<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/NewRestRequest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3a83B"
    tools:context=".NewRestActivity"
    android:padding="16dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        app:srcCompat="@drawable/logo2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="אל:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:id="@+id/orderest_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray"
        android:inputType="textEmailAddress"
        android:text="OrdeRest Support"
        android:textSize="24sp" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="שם המסעדה:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <EditText
        android:id="@+id/rest_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray"
        android:inputType="textEmailSubject"
        android:textSize="24sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="יש לרשום את כתובת המסעדה,מס טלפון,אתר האינטרנט של המסעדה ורשת חברתית:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <EditText
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="15"
        android:gravity="start|top"
        android:background="@drawable/rounded_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="תפריט המסעדה ותמונות יש לצרף בגוף המייל לאחר לחיצת כפתור שלח בקשה לפתיחת דף עסק"
        android:textStyle="bold"
        />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_btn"
        android:text="שלח בקשה לפתיחת דף עסק"
        android:background="@drawable/circle_button"/>


</LinearLayout>

